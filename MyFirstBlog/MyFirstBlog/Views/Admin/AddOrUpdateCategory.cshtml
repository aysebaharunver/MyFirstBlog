@model MyFirstBlog.Models.Entities.Category
@{
    ViewBag.Title = "AddOrUpdateCategory";

    string btnText = Model != null ? "Güncelle" : "Ekle";
}

<div class="row">
    <h2>Kategori Ekle</h2>

    @using (Html.BeginForm("AddOrUpdateCategory", "Admin", FormMethod.Post))
    {
        // güvenlik gereği token oluşturmalıyım
        @Html.AntiForgeryToken()

        if (Model != null)
        {
            // güncelleme durumunda gizli olarak id yi taşımmamız gerek
            @Html.HiddenFor(m => m.Id)
        }


        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input type="submit" value="@btnText" class="btn btn-primary btn-sm" />
                </div>
            </div>

        </div>
    }

</div>

