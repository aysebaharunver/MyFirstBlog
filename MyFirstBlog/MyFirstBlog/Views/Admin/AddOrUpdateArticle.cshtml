@model MyFirstBlog.Models.Entities.Article
@{
    ViewBag.Title = "AddOrUpdateArticle";
}

<div class="row">

    <h2>Makale Ekleme</h2>

    @using (Html.BeginForm("AddOrUpdateArticle", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        if (Model != null)
        {
            @Html.HiddenFor(m => m.Id)
        }

        <div class="form-horizontal">

            <div class="form-group">
                @Html.LabelFor(m => m.CategoryId, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.CategoryId, new SelectList(ViewBag.Categorylist, "Id", "Name"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-3" })
                <div class="col-sm-9">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control ckeditor" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input type="submit" class="btn btn-primary btn-sm" value="Ekle" />
                </div>
            </div>



        </div>
    }


</div>

<script src="https://cdn.ckeditor.com/4.13.1/standard/ckeditor.js"></script>

<script>
    CKEDITOR.replace('.ckeditor');
</script>