
@model List<MyFirstBlog.Models.Entities.Category>

<div class="col-sm-12">
    <h4>Kategoriler</h4>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a href="@Url.Action("Index","Home",new { categoryId=item.Id})">
                    @item.Name
                </a>
            </li>
        }
    </ul>
</div>
